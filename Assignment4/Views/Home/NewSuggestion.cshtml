@{
    ViewBag.Title = "Enter a new suggestion";
}

@model Assignment4.Models.Suggestion

<div class="text-center">
    <p>This is where you can enter your Restaurant Suggestion!</p>

    <form asp-action="EnterMovie" method="post">
        <div>
            <label asp-for="SuggName">Your Name:</label>
            <input asp-for="SuggName" />
        </div>

        <div>
            <label asp-for="SRName">Restaurant Name:</label>
            <input asp-for="SRName" />
        </div>

        <div>
            <label asp-for="SRFavDish">Your Favorite Dish:</label>
            <input asp-for="SRFavDish" />
        </div>

        <div>
            <label asp-for="SRPhone">Restaurant Phone:</label>
            <input asp-for="SRPhone" />
        </div>

        <button type="submit">Submit Suggestion</button>

    </form>

</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}